{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react-hcl",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "paths": {
      "react-hcl/jsx-runtime": ["./src/jsx-runtime.ts"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
