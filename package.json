{
  "name": "react-hcl",
  "version": "0.2.0",
  "description": "JSX/TSX to Terraform (.tf) transpiler with a custom JSX runtime",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    }
  },
  "bin": {
    "react-hcl": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "npm run build:js:cli && npm run build:js:index && npm run build:js:jsx-runtime",
    "build:js:cli": "esbuild src/cli/index.ts --outfile=dist/cli.js --format=esm --platform=node --target=node22 --bundle --external:esbuild --external:commander --external:hcl2-parser --banner:js='#!/usr/bin/env node'",
    "build:js:index": "esbuild src/index.ts --outfile=dist/index.js --format=esm --platform=node --target=node22 --external:esbuild --bundle",
    "build:js:jsx-runtime": "esbuild src/jsx-runtime.ts --outfile=dist/jsx-runtime.js --format=esm --platform=node --target=node22 --bundle",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "typecheck:examples": "tsc -p examples/tsconfig.json --noEmit",
    "pretest": "npm run build:js:cli",
    "test": "vitest run",
    "tf:validate:examples": "bash scripts/terraform-validate-examples.sh",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^24.5.2",
    "execa": "^9.6.0",
    "hcl2-parser": "^1.0.3",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "esbuild": "^0.27.3"
  }
}
